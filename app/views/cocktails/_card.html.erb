
<div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.1) 0%, rgba(0,36,61,0.6) 50%),url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
  <div class="card-category"></div>
  <div class="card-description">
    <h2><%= cocktail.name %></h2>
  </div>
  <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
</div>
